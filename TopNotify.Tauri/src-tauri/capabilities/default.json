{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "fs:allow-public-read",
    "fs:allow-public-read-recursive",
    {
      "identifier": "fs:allow-read",
      "allow": [
        {
          "path": "**/*"
        }
      ]
    }
  ]
}